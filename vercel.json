{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/app.py"
        },
        {
            "src": "/upload",
            "dest": "/app.py"
        },
        {
            "src": "/download/(.*)",
            "dest": "/app.py"
        },
        {
            "src": "/health",
            "dest": "/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ]
}